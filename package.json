  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "pptxgenjs": "^3.12.0"
    "pptx-automizer": "^1.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
